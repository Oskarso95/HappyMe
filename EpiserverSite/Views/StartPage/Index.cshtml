@using System.Web.Razor.Parser
@using EpiserverSite.Models.Pages
@using EpiserverSite;
@using ImageProcessor.Web.Episerver
@model EpiserverSite.Models.ViewModels.PageViewModel<EpiserverSite.Models.Pages.StartPage>

@{
    var bgImage = Model.CurrentPage.BackgroundImage != null ? string.Format("style=background-image:url({0})", Html.ProcessImage(Url.ContentUrl(Model.CurrentPage.BackgroundImage)).ResizeCrop(1920, null, null, null)) : "";
}

@section HeroSection
{

    <div class="row w-100 bg-image triangle-down" @bgImage>
        <div class="w-100 m-0 p-0">
            @{
                Html.RenderPartial("_Header", Model, new ViewDataDictionary
                {
                    {
                        "hasImage", Model.CurrentPage.BackgroundImage != null
                    }
                });
            }
        </div>
        <div class="row">
            @Html.PropertyFor(x => x.CurrentPage.RightContentArea, new
            {
                CssClass = "w-50 align-items-center text-center justify-content-center flex-column d-flex",
                Tag = Global.ContentAreaTags.HalfWidth,
            })

            @Html.PropertyFor(x => x.CurrentPage.LeftContentArea, new
            {
                CssClass = "w-50 align-items-center text-center justify-content-center flex-column d-flex",
                Tag = Global.ContentAreaTags.HalfWidth
            })
        </div>
        <div class="row">
            @Html.PropertyFor(x => x.CurrentPage.ContentArea, new
            {
                CssClass = "row",
                Tag = Global.ContentAreaTags.FullWidth
            })
        </div>
    </div>

}