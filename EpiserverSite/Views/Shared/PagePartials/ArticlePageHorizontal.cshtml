@model EpiserverSite.Models.Pages.ArticlePage

<div class="articlepage-horizontal">

    <div class="articlepage-horizontal__image-container">
        <a href="@Model.LinkURL">
            @Html.PropertyFor(x => x.BackgroundImage, new {CssClass = "w-100"})
        </a>
    </div>
    <div class="articlepage-horizontal__text-container">
        <h1 @Html.EditAttributes(x => x.Heading) class="display-2">@Model.Heading</h1>
        <p @Html.EditAttributes(x => x.Ingress) class="lead">@Model.Ingress</p>
    </div>
</div>